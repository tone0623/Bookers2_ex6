<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

  	<div class='body'>
      <div class='container'>
            <p id="notice"><%= notice %></p>
            <div class = "center">
            <% if user_signed_in? %>
                  <%= form_tag(search_path,:method => 'get') do %>
                    <%= text_field_tag :search %>
                    <%= select(@search_content, :search_model, [ ["User"], ["Book"]])%>
                    <%= select(@search_content, :search_method, [ ["完全一致","perfect_match"], ["部分一致","partial_match"],["前方一致","forward_match"], ["後方一致","backward_match"]])%>
                    <%= submit_tag '検索', :name => nil %>
                  <% end %>
            <% end %>
            </div>
      
      	<%= yield %>
      </div>
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
